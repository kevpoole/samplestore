<%= turbo_stream.replace "cart_navbar", partial: "shared/navbar", locals: { cart: @cart } %>


<turbo-stream action="replace" target="<%= dom_id(@product, :add_to_cart) %>">
  <template>
    <div id="<%= dom_id(@product, :add_to_cart) %>">
      <h2 class="mb-2">Item in Cart!</h2>
      <%= link_to "View Cart", cart_path(@current_cart.secret_id), class: "bg-slate-400 text-black px-4 py-2 mt-4 w-fit rounded cursor-pointer" %>
    </div>
  </template>
</turbo-stream>

<turbo-stream action="remove" target="<%= dom_id(@product, :options) %>"></turbo-stream>


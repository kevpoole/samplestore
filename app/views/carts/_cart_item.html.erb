<div id="<%= dom_id(cart_item) %>" class="mb-4 lg:px-0 px-2 flex items-center border border-gray-400 justify-around">
    <%= image_tag product.images.last, class: "w-16 h-16 lg:m-0 mr-2 object-cover" if product.images.any?  %>
    <%= link_to "#{product.name}  #{cart_item.options.present? ? cart_item.options : ''}", product_path(product), class: "py-2 w-1/3" %>
    <p class="w-1/3"> <%= number_to_currency product.price %> </p>
    <%= button_to "Remove", cart_item_path(cart_item), method: :delete, 
                 class: "w-1/3 text-red-400 bg-transparent border-none cursor-pointer", data: {turbo: "false"} %>
</div>
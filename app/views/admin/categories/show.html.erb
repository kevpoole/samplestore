<% content_for :title, "Showing category" %>

<div class="md:w-2/3 w-full flex flex-col p-4">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-2xl"><%= @admin_category.name %></h1>

  <%= render @admin_category %>
  <%= @admin_category.description %>
  <div class="w-32 h-32">
    <%= image_tag(@category.image) if @category&.image.present? %>
  </div> 
  <div class="flex items-center">
    <%= link_to "Edit", edit_admin_category_path(@admin_category), class: "mt-2 rounded-md px-3.5 py-2.5  hover:bg-gray-200 inline-block font-medium" %>
    <%= button_to "Delete", [:admin, @category], method: :delete, class: "mt-2 rounded-md px-3.5 py-2.5 text-red-500 hover:bg-red-500 hover:text-white font-medium" %>
    <%= link_to "Back to categories", admin_categories_path, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-200 inline-block font-medium" %>
  </div>
</div>

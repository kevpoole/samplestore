<% content_for :title, "Links" %>

<div class="w-full p-4">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <div class="flex w-1/2 justify-between items-center">
    <h1 class="font-bold text-4xl">Links</h1>
    <%= link_to "New Link", new_admin_link_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="admin_links" class="w-full">
    <% if @admin_links.any? %>
      <table class="min-w-full border-collapse border border-gray-300 mt-6">
        <thead>
          <tr class="bg-gray-200">
            <th class="border border-gray-300 px-4 py-2">Name</th>
            <th class="border border-gray-300 px-4 py-2">URL</th>
            <th class="border border-gray-300 px-4 py-2">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @admin_links.each do |admin_link| %>
            <tr class="hover:bg-gray-100">
              <td class="border border-gray-300 px-4 py-2"><%= admin_link.name %></td>
              <td class="border border-gray-300 px-4 py-2">
                <%= link_to admin_link.url, admin_link.url.starts_with?("http") ? admin_link.url : "https://#{admin_link.url}", target: "_blank", class: "text-blue-500 hover:underline" %>

              </td>
              <td class="border border-gray-300 px-4 py-2">
                <div class="flex items-center justify-center space-x-4">
                  <%= link_to 'Edit', edit_admin_link_path(admin_link), class: "text-blue-500 hover:underline" %>
                  <%= button_to 'Delete', [:admin, admin_link], method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500 hover:underline" %> 
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-center my-10">No links found.</p>
    <% end %>
  </div>
</div>

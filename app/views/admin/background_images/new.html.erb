<div class="flex flex-col">

<h1 class="text-3xl font-bold mb-4">Add Background Image</h1>

<%= form_with model: @admin_background_image, url: admin_background_images_path, local: true do |f| %>
  <div class="mb-4 flex flex-col">
    <%= f.label :image, "Upload Background Image", class: "block font-medium" %>
    <%= f.file_field :image, class: "mt-2 p-2 border border-gray-300 rounded" %>
  </div>

  <%= f.submit "Add Image", class: "bg-blue-600 cursor-pointer text-white px-4 py-2 rounded " %>
<% end %>

</div>
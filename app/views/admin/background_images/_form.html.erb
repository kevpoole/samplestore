
<div class="flex flex-col">
<h2>Update Background Image</h2>

<%= form_with(model: @admin_background_image, url: admin_background_image_path, method: :patch, local: true) do |form| %>
  <% if @background_image.image.attached? %>
    <p>Current Background Image:</p>
    <%= image_tag @background_image.image, class: "w-64 h-auto" %>
  <% end %>

  <div class="my-4">
    <%= form.label :image, "Upload New Background Image" %>
    <%= form.file_field :image %>
  </div>

  <%= form.submit "Update Background", class: "bg-blue-600 text-white px-4 py-2 rounded-md" %>
<% end %>
</div>

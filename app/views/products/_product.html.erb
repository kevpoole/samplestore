<div class="flex flex-col relative">

<%= link_to product do %>
  <div class="bg-white p-2" id="<%= dom_id product %>">
    <%= image_tag product.images.last, class: "w-full h-60 object-cover" if product.images.any?  %>
    <p class="w-full tracking-wide bg-white opacity-90 p-2 text-xl font-orbitron flex text-center"> <%=product.name %> </p>
  </div>
<% end %>
</div>


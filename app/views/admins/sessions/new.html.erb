<div class="flex flex-col border bg-white p-8">
<h2 class="mb-4 text-3xl bg-white">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="my-4">
    <%= f.label :email, class: "text-2xl" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border  text-xl rounded-lg p-2" %>
  </div>

  <div class="my-4">
    <%= f.label :password, class: "text-2xl " %><br />
    <%= f.password_field :password, class: "border rounded-lg p-2 text-xl" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field my-2">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "text-2xl" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "bg-gray-400  text-2xl py-2 px-4 rounded-lg cursor-pointer hover:bg-gray-600 hover:text-white" %>
  </div>
<% end %>

</div>